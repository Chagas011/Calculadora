Tela:
    Layout1:
        Layout2:

<Layout1@BoxLayout>:
    orientation: "vertical"
    size: root.size

    TextInput:
        id: caixa_entrada
        text: '0'
        multiline: False
        font_size: 82
        halign: 'right'
        size_hint: 1, None
        height: 120
        pos_hint: {"center_x": 0.5, "center_y": 0.82}
        foreground_color: 1, 222,255
        background_color: 105/255, 105/255, 0.6

<Layout2@GridLayout>:
    cols: 4
    rows: 5

    # Linha 1 

    MDRoundFlatButton:
        text: 'CE'
        font_size: '82'
        size_hint: 0.01, 0.01
        line_color: 1,1,1,0
        text_color: 80/255, 80/255, 1
        on_press: root.parent.limpar()

    MDRoundFlatButton:
        text: '%'
        font_size: '82'
        size_hint: 0.01, 0.01
        line_color: 1,1,1,0
        text_color: 80/255, 80/255, 1
    MDRoundFlatButton:
        text: u'\u00AB'
        font_size: '82'
        size_hint: 0.01, 0.01
        line_color: 1,1,1,0
        text_color: 80/255, 80/255, 1
    MDRoundFlatButton:
        text: u'\u00F7'
        font_size: '82'
        size_hint: 0.01, 0.01
        line_color: 1,1,1,0
        text_color: 80/255, 80/255, 1
        on_press: root.parent.operadores("/")

    # Linha 2 

    MDRoundFlatButton:
        text: '7'
        font_size: '82'
        size_hint: 0.01, 0.01
        line_color: 1,1,1,0
        on_press: root.parent.valor_botao(7)
    MDRoundFlatButton:
        text: '8'
        font_size: '82'
        size_hint: 0.01, 0.01
        line_color: 1,1,1,0
        on_press: root.parent.valor_botao(8)
    MDRoundFlatButton:
        text: '9'
        font_size: '82'
        size_hint: 0.01, 0.01
        line_color: 1,1,1,0
        on_press: root.parent.valor_botao(9)
    MDRoundFlatButton:
        text: u'\u00D7'
        font_size: '82'
        size_hint: 0.01, 0.01
        line_color: 1,1,1,0
        text_color: 80/255, 80/255, 1
        on_press: root.parent.operadores("*")
    # Linha 3 

    MDRoundFlatButton:
        text: '4'
        font_size: '82'
        size_hint: 0.01, 0.01
        line_color: 1,1,1,0
        on_press: root.parent.valor_botao(4)
    MDRoundFlatButton:
        text: '5'
        font_size: '82'
        size_hint: 0.01, 0.01
        line_color: 1,1,1,0
        on_press: root.parent.valor_botao(5)
    MDRoundFlatButton:
        text: '6'
        font_size: '82'
        size_hint: 0.01, 0.01
        line_color: 1,1,1,0
        on_press: root.parent.valor_botao(6)
    MDRoundFlatButton:
        text: '-'
        font_size: '82'
        size_hint: 0.01, 0.01
        line_color: 1,1,1,0
        text_color: 80/255, 80/255, 1
        on_press: root.parent.operadores("-")
    # Linha 4 
    MDRoundFlatButton:
        text: '1'
        font_size: '82'
        size_hint: 0.01, 0.01
        line_color: 1,1,1,0
        on_press: root.parent.valor_botao(1)
    MDRoundFlatButton:
        text: '2'
        font_size: '82'
        size_hint: 0.01, 0.01
        line_color: 1,1,1,0
        on_press: root.parent.valor_botao(2)
    MDRoundFlatButton:
        text: '3'
        font_size: '82'
        size_hint: 0.01, 0.01
        line_color: 1,1,1,0
        on_press: root.parent.valor_botao(3)
    MDRoundFlatButton:
        text: '+'
        font_size: '82'
        size_hint: 0.01, 0.01   
        line_color: 1,1,1,0
        text_color: 80/255, 80/255, 1
        on_press: root.parent.operadores("+")

    # Linha 5 
    MDRoundFlatButton:
        text: '-/+'
        font_size: '82'
        size_hint: 0.01, 0.01
        line_color: 1,1,1,0
        text_color: 80/255, 80/255, 1
    MDRoundFlatButton:
        text: '0'
        font_size: '82'
        size_hint: 0.01, 0.01
        line_color: 1,1,1,0
        on_press: root.parent.valor_botao(0)
    MDRoundFlatButton:
        text: '.'
        font_size: '82'
        size_hint: 0.01, 0.01
        line_color: 1,1,1,0
        text_color: 80/255, 80/255, 1
        on_press: root.parent.operadores(".")
    MDRoundFlatButton:
        text: '='
        font_size: '82'
        size_hint: 0.01, 0.01
        line_color: 1,1,1,0
        text_color: 80/255, 80/255, 1
        on_press: root.parent.resultado()